<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md room">
    <h1>Rooms</h1>
      <table>
        <thead>
          <tr>
            <th class="thead">Room</th>
            <th class="thead">Subject</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td class=""><%= link_to "#{room.name}", room , class: "tbody"%></td>
              <td class="tbody"><%= room.subject %></td>
              <td><%= link_to 'Edit', edit_room_path(room) %></td>
              <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md pic">
      <%= image_tag("logo2.png", class: "img-fluid logo") %>
    </div>
  </div>
</div>


<br>
<button type="button" class="btn btn-outline-light btn-sm"><%= link_to 'Create a Room', new_room_path, class: "button" %>
</button>
